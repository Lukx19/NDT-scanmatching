<launch>
  <group ns="slam">
    <node pkg="ml_ndt_scanmatching" type="ml_ndt_node" name="ml_ndt" respawn="true">
      <param name="tf_prefix" value="p3dx_0"/>
      <param name="robot_base_frame_id" value="base_footprint"/>
      <!-- incomming odometry  tf frame_id without tf_prefix -->
      <param name="odom_frame_id" value="odom"/>
      <!-- new calculated odometry result frame_id name -->
      <param name="new_odom_frame_id" value="ndt_odom"/>
      <!-- topic to listen on for odometry messages -->
      <param name="odom_topic" value="/p3dx_0/dpl/odom"/>
      <!--  where to publish calculated odometry msgs -->
      <param name="calculated_odom_topic" value="/p3dx_0/slam/odom"/>
      <!-- where to listen for incomming laser msgs -->
      <param name="laser_topic" value="/p3dx_0/dpl/hal/laser/sensor0/LaserScan"/>
      <!-- Lowest resolution of grid used for NDT calculation [m/cells]  -->
       <param name="resolution" type="double" value="0.5"/>
       <!-- Maximal allowe range of laser sensor. Data exceeding this number will be dropped -->
       <param name="maximal_laser_range" type="double" value="4.0"/>
       <!-- Number of layers used to calculate ML-NDT Default:4 -->
       <param name="number_of_layers" type="int" value="4"/>
    </node>
  </group>
</launch>